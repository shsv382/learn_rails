<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul><% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
  <%= f.label :tag_list %><br />
  <%= f.text_field :tag_list %>
  </p>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :body %>
  <%= f.text_area :body %>
  </p>
  <p>
  <%= f.label :image, "Attach an image" %><br>
  <%= f.file_field :image %>
  </p>
  <p><%= f.submit %>
  </p>
  <% end %>